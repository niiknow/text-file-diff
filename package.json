{
  "name": "text-file-diff",
  "version": "1.4.5",
  "description": "line by line diff of two large files",
  "license": "MIT",
  "repository": "niiknow/text-file-diff",
  "author": {
    "name": "noogen",
    "email": "friends@niiknow.org",
    "url": "niiknow.org"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "scripts": {
    "build": "tsc",
    "test": "tsc && cross-env DEBUG=text-file-diff xo && cross-env DEBUG=text-file-diff nyc ava",
    "report": "tsc && cross-env DEBUG=text-file-diff nyc report --reporter=html"
  },
  "bin": {
    "text-file-diff": "./bin/text-file-diff"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "diff",
    "difference",
    "differences",
    "compare",
    "compare-files"
  ],
  "devDependencies": {
    "@types/node": "^14.14.21",
    "ava": "^3.15.0",
    "cross-env": "^7.0.3",
    "nyc": "^15.1.0",
    "typescript": "^4.1.3",
    "xo": "^0.37.1"
  },
  "xo": {
    "semicolon": true,
    "prefer-const": false,
    "space": 2,
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "object-shorthand": [
        0,
        "consistent"
      ],
      "capitalized-comments": [
        "error",
        "never"
      ],
      "ava/prefer-async-await": 0
    }
  },
  "ava": {
    "failWithoutAssertions": true
  }
}
